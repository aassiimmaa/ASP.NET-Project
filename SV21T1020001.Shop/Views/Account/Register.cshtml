@using SV21T1020001.DomainModels
@model Register

@{
    Layout = null;
}

<style>
    body {
        background-color: #f4f6f9;
        font-family: Arial, sans-serif;
    }

    .login-container {
        width: 100%;
        max-width: 400px;
        margin: 60px auto;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        padding: 30px;
    }

        .login-container h2 {
            text-align: center;
            color: #3D8DBC;
            margin-bottom: 20px;
        }

    .form-control {
        width: 100%;
        padding: 8px;
        margin-top: 8px;
        margin-bottom: 4px;
        border: 1px solid #ddd;
    }

        .form-control:focus {
            border-color: #3D8DBC;
            box-shadow: 0 0 5px rgba(61, 141, 188, 0.5);
        }

    .btn-login {
        background-color: #3D8DBC;
        color: #fff;
        font-weight: bold;
        padding: 12px;
        width: 30%;
        cursor: pointer;
        border: none;
        transition: background-color 0.3s ease;
    }

    .btn-login:hover {
        background-color: #337ab7;
    }

    .text-center a {
        color: #3D8DBC;
        text-decoration: none;
    }

    .text-center a:hover {
        text-decoration: underline;
     }

     label{
         font-weight: 600;
         margin-bottom: 8px;
     }

    .btn-secondary{
        text-decoration: none;
        background-color: rgba(0, 0, 0, 0.5);
        font-size: 13px;
        height: 80px;
        color: #fff;
        font-weight: bold;
        padding: 12px;
        width: 30%;
        cursor: pointer;
        border: none;
        transition: background-color 0.3s ease;
    }
</style>
<div class="login-container">
    <h2>Đăng Ký</h2>
    <form action="~/Account/Register" method="post">
        <input type="hidden" name="@nameof(Model.CustomerID)" value="@Model.CustomerID" />
        <div class="form-group">
            <label>Tên khách hàng:</label>
            <input type="text" class="form-control" name="@nameof(Model.CustomerName)" value="@Model.CustomerName">
            @Html.ValidationMessage(nameof(Model.CustomerName), new { @style = "color:#f00" })
        </div>
        <div class="form-group">
            <label>Tên giao dịch:</label>
            <input type="text" class="form-control" name="@nameof(Model.ContactName)" value="@Model.ContactName">
            @Html.ValidationMessage(nameof(Model.ContactName), new { @style = "color:#f00" })
        </div>
        <div class="form-group">
            <label>Điện thoại:</label>
            <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone">
            @Html.ValidationMessage(nameof(Model.Phone), new { @style = "color:#f00" })
        </div>
        <div class="form-group">
            <label>Email:</label>
            <input type="email" class="form-control" name="@nameof(Model.Email)" value="@Model.Email">
            @Html.ValidationMessage(nameof(Model.Email), new { @style = "color:#f00" })
            @Html.ValidationMessage("IsvalidEmail", new { @style = "color:#f00" })
        </div>
        <div class="form-group">
            <label>Mật khẩu:</label>
            <input type="password" class="form-control" name="@nameof(Model.Password)" value="@Model.Password">
            @Html.ValidationMessage(nameof(Model.Password), new { @style = "color:#f00" })
        </div>
        <div class="form-group">
            <label>Xác nhận mật khẩu:</label>
            <input type="password" class="form-control" name="@nameof(Model.PasswordConfirm)" value="@Model.PasswordConfirm">
            @Html.ValidationMessage(nameof(Model.PasswordConfirm), new { @style = "color:#f00" })
        </div>
        <div class="form-group">
            <label>Địa chỉ:</label>
            <input type="text" class="form-control" name="@nameof(Model.Address)" value="@Model.Address">
            @Html.ValidationMessage(nameof(Model.Address), new { @style = "color:#f00" })
        </div>
        <div class="form-group">
            <label>Tỉnh thành:</label>
            <select style="padding: 8px; border-radius: 0" class="form-control" name="@nameof(Model.Province)" style="padding:5px;border-radius:5px">
                <option value="">-- Chọn tỉnh thành --</option>
                @foreach (var item in SV21T1020001.BusinessLayers.CommonDataService.ListOfProvinces())
                {
                    if (item.ProvinceName == Model.Province)
                    {
                        <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                    }
                    else
                    {
                        <option value="@item.ProvinceName">@item.ProvinceName</option>
                    }
                }

            </select>
            <br />
            @Html.ValidationMessage(nameof(Model.Province), new { @style = "color:#f00" })
        </div>
        <div style="text-align: right">
            <button type="submit" class="btn btn-primary btn-login">
               Đăng ký
            </button>
            <a href="~/Home/Index" class="btn btn-secondary">
                Quay lại
            </a>
        </div>
    </form>
</div>