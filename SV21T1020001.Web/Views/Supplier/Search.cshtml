@model SV21T1020001.Web.Models.SupplierSearchResult

@{
    Layout = null;
}
<p style="margin: 10px 0px">Có <b>@Model.RowCount</b> nhà cung cấp trong tổng số  <b>@Model.PageCount</b> trang</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Tên nhà cung cấp</th>
                <th>Tên liên hệ</th>
                <th>Điện thoại</th>
                <th>Email</th>
                <th>Địa chỉ</th>
                <th>Tỉnh/thành phố</th>
                <th style="width:80px"></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.SupplierName</td>
                    <td>@item.ContactName</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.Provice</td>
                    <td class="text-right">
                        <a href="~/Supplier/Edit/@item.SupplierID" class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Supplier/Delete/@item.SupplierID" class="btn btn-xs btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

    <div class="text-center">
        <ul class="pagination">
            @for (int p = 1; p <= Model.PageCount; p++)
            {
                if (p == Model.Page)
                {
                    <li class="active"><a href="#">@p</a></li>
                }
                else
                {
                    <li><a href="~/Supplier?page=@p&SearchValue=@Model.SearchValue">@p</a></li>
                }
            }
        </ul>
    </div>


</div>