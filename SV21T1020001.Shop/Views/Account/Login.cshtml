@{
    Layout = null;
}

<style>
    body {
        background-color: #f4f6f9;
        font-family: Arial, sans-serif;
    }
    .login-container {
        width: 100%;
        max-width: 400px;
        margin: 100px auto;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        padding: 30px;
    }
    .login-container h2 {
        text-align: center;
        color: #3D8DBC;
        margin-bottom: 20px;
    }
    .form-control {
        width: 100%;
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid #ddd;
    }
    .form-control:focus {
        border-color: #3D8DBC;
        box-shadow: 0 0 5px rgba(61, 141, 188, 0.5);
    }
    .btn-login {
        background-color: #3D8DBC;
        color: #fff;
        font-weight: bold;
        padding: 12px;
        width: 30%;
        margin-left: 50%;
        translate: -50%;
        cursor: pointer;
        border: none;
        transition: background-color 0.3s ease;
    }
    .btn-login:hover {
        background-color: #337ab7;
    }
    .text-center a {
        color: #3D8DBC;
        text-decoration: none;
    }
    .text-center a:hover {
        text-decoration: underline;
    }
    .register_link{
        text-decoration: none;
        color: #3D8DBC;
    }
    .register_link:hover{
        opacity: 0.7;
        text-decoration: underline;
    }
</style>
<div class="login-container">
    <img style="margin-left: 50%; translate: -50%" width="200px" src="~/images//logo.png" />
    <h2>Đăng Nhập</h2>
    <form action="~/Account/Login" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input type="text" class="form-control" id="email" name="username" placeholder="Email" value="@ViewBag.Username">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="password" name="password" placeholder="Mật khẩu" value="@ViewBag.Username">
        </div>
        <div style="margin-bottom: 12px;">
                @Html.ValidationMessage("Error", new { @style = "color: #f00" })
        </div>
        <button type="submit" class="btn-login">Đăng nhập</button>
    </form>
    <p style="text-align: center; color: rgba(0, 0, 0, 0.5); margin-bottom: 0">Chưa có tài khoản? <a class="register_link" href="~/Account/Register">Đăng ký</a></p>
</div>
